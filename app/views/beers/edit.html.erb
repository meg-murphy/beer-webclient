
<%= form_tag "/beers/#{@beer["id"]}", method: :patch do %>
<form class="form-inline">

  <div class="form-group">
     <%= label_tag :name%>
     <%= text_field_tag :name, @beer["name"], placeholder: "Name", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :style%>
    <%= text_field_tag :style, @beer["style"], placeholder: "Style", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :hop%>
    <%= text_field_tag :hop, @beer["hop"], placeholder: "Hop", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :yeast%>
    <%= text_field_tag :yeast, @beer["yeast"], placeholder: "Yeast", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :malts%>
    <%= text_field_tag :malts, @beer["malts"], placeholder: "Malts", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :ibu%>
    <%= text_field_tag :ibu, @beer["ibu"], placeholder: "IBU", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :alcohol%>
    <%= text_field_tag :alcohol, @beer["alcohol"], placeholder: "Alcohol", class:"form-control" %>
  </div>

  <div>
    <%= submit_tag "Submit", class:"btn btn-default"%>
  </div>

<% end %>
