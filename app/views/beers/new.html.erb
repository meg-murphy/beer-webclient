
<%= form_tag "/beers", method: :post do %>
<form class="form-inline">

  <div class="form-group">
     <%= label_tag :name%>
     <%= text_field_tag :name, nil, placeholder: "Name", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :style%>
    <%= text_field_tag :style, nil, placeholder: "Style", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :hop%>
    <%= text_field_tag :hop, nil, placeholder: "Hop", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :yeast%>
    <%= text_field_tag :yeast, nil, placeholder: "Yeast", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :malts%>
    <%= text_field_tag :malts, nil, placeholder: "Malts", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :ibu%>
    <%= text_field_tag :ibu, nil, placeholder: "IBU", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :alcohol%>
    <%= text_field_tag :alcohol, nil, placeholder: "Alcohol", class:"form-control" %>
  </div>

  <div>
    <%= submit_tag "Submit", class:"btn btn-default"%>
  </div>

<% end %>
